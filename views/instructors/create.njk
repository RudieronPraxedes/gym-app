{% extends "layout.njk" %}

{% block content %}

<form class="card" method="POST" action="/instructors">

    <section class="avatar"
     style="background: url(https://source.unsplash.com/collection/3465564/200x200) no-repeat center center / cover">  </section>

    <section class="details">

        <h3> NOVO INSTRUTOR</h3>

        <div class="item">
            <div> Avatar URL</div>
            <div> 
            <input type="url" name="avatar_url" placeholder="http://"> 
            </div>
        </div>

        <div class="item">
            <div> INSTRUTOR</div>
            <div> 
            <input type="text" name="name" placeholder="Nome do Intrutor"> 
            </div>
        </div>

        <div class="item">
            <div> Data de nascimento</div>
            <div> 
            <input type="date" name="birth"> 
            </div>
        </div>

        <div class="item">
            <div> Sexo</div>
                <div>
                    <span><input type="radio" name="gender" value="M" checked> Masculino</span>
                     <span><input type="radio" name="gender" value="F"> Feminino</span>
                </div>
        </div>

          <div class="item">
            <div> Área de Atuação</div>
                <div>
                    <input type="text" name="services" placeholder="Separe os serviços prestados por  vírgula" >
                     
                </div>
        </div>      
        
        <button type="submit">Salvar</button>
     </section>
 

</form> 

{% endblock content%}